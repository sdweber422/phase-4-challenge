<!DOCTYPE html>
<html>

<%- include('./head') %>

<body>

  <%- include('./header') %>

  <h1><%= album.title %></h1>
  <em>by <%= album.artist %></em>
  <em> <%= album.id %>/em>
  <form action="/newReview/<%= album.id %>" method="get">
    <button type="submit">Add Review</button>
  </form>

  <h2>Reviews</h2>
  <div class="review-list">
    <% reviews.forEach(function(review) { %>
      <h3><a href="/albums/<%= review.album_id %>"><%= review.album.title%></a></h3>
      <h5><%= review.created_at%></h5>
      <h5><%= review.body %></h5>
      <h4>by: <%= review.user.name%></h4>
    <% }) %>
  </div>

</body>
</html>
