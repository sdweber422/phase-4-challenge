<!DOCTYPE html>
<html>

<%- include('./head') %>

<body>

  <%- include('./header') %>

  <h1><%= name %></h1>
  <h1><%= email %></h1>
  <h2><%= joinDate %></h2>

  <h2>Records</h2>

  <div class="album-list">
    <% albums.forEach(function(album) { %>
      <div>
        <h5><a href="/albums/<%= album.id %>"><%= album.title %></a></h5>
        <span><%= album.artist %></span>
      </div>
    <% }) %>
  </div>

  <h2>Reviews</h2>
  <div class="review-list">
    <% reviews.forEach(function(review) { %>
      <h3><a href="/albums/<%= review.album_id %>"><%= review.album.title%></a></h3>
      <h5><%= review.created_at%></h5>
      <h5><%= review.body %></h5>
      <h4>by: <%= name%></h4>
      <form action="/delete/<%= review.id%>" method="post">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this review?')">DELETE REVIEW?</button>
      </form>
    <% }) %>
  </div>

</body>
</html>
